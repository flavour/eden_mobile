<?xml version='1.0' encoding='utf-8'?>
<widget id="org.sahanafoundation.eden_mobile" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EdenMobile</name>
    <description>
        A mobile application for Sahana Eden
    </description>
    <author email="sahana-eden@googlegroups.com" href="http://eden.sahanafoundation.org">
        Sahana Eden Project
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <icon src="www/img/logo.png" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.1" />
    <engine name="ios" spec="~4.1.1" />
    <plugin name="cordova-sqlite-storage" spec="~1.4.7" />
    <plugin name="cordova_app_version_plugin" spec="~0.2.6" />
</widget>
