<?xml version='1.0' encoding='utf-8'?>
<widget id="org.sahanafoundation.eden_mobile" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SQLitePlugin">
        <param name="android-package" value="io.sqlc.SQLitePlugin" />
    </feature>
    <allow-intent href="market:*" />
    <name>EdenMobile</name>
    <description>
        A mobile application for Sahana Eden
    </description>
    <author email="sahana-eden@googlegroups.com" href="http://eden.sahanafoundation.org">
        Sahana Eden Project
    </author>
    <content src="index.html" />
    <access origin="*" />
    <icon src="www/img/logo.png" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
