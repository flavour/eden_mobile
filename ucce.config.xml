<?xml version='1.0' encoding='utf-8'?>
<widget id="org.sahanafoundation.eden_mobile.ucce" version="0.9.7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EdenMobile UCCE</name>
    <description>
        UCCE Survey Tool
    </description>
    <author email="sahana-eden@googlegroups.com" href="http://eden.sahanafoundation.org">
        Sahana Eden Project
    </author>
    <content src="ucce.html" />
    <access origin="*" />
    <icon src="www/img/logo.png" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.1.1" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="KeyboardResize" value="true" />
    <preference name="KeyboardResizeMode" value="native" />
</widget>
